<header class="bg-white border-b border-gray-300 dark:bg-slate-800 dark:border-slate-700" data-controller="hello">
  <div class="container mx-auto px-8">
    <div class="flex items-center justify-between py-4">
      <!-- Instagram logo -->
      <div>
        <%= link_to root_path do %>
          <i data-visualcompletion="css-img" aria-label="Instagram" class="dark:text-white" role="img" style="background-image: url(&quot;https://static.cdninstagram.com/rsrc.php/v3/yS/r/ajlEU-wEDyo.png&quot;); background-position: 0px -52px; background-size: auto; width: 175px; height: 51px; background-repeat: no-repeat; display: inline-block;"></i>
        <% end %>
      </div>
      <!-- Mobile Menu Toggle Button -->
      <button class="md:hidden" data-hello-target="mobileIcon">
        <svg class="w-6 h-6 text-gray-600 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
      </button>
      <!-- Search bar and navigation links -->
      <div class="hidden md:flex items-center space-x-6">
        <!-- Search bar -->
        <div class="relative">
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center">
            <span class="h-5 w-5 text-gray-500 material-icons dark:text-white">search</span>
          </span>
          <input type="text" class="block w-40 bg-gray-100 border border-gray-300 rounded-full py-2 pl-10 pr-4 text-sm placeholder-gray-500 dark:bg-slate-800 dark:border-slate-700 dark:text-white" placeholder="Search">
        </div>
        <!-- Navigation links -->
        <nav>
          <ul class="flex space-x-4 items-center">
            <li><a href="#" class="text-black font-medium dark:text-white">Home</a></li>
            <li><a href="#" class="text-black font-medium dark:text-white">Explore</a></li>
            <li><a href="#" class="text-black font-medium dark:text-white">Notifications</a></li>
            <% if current_user %>
              <%= link_to "Logout",destroy_session_path,data: {turbo_method: "delete",turbo_confirm: "Are you sure you want to logout?"},class: "bg-red-500 text-white px-4 py-2 rounded-full shadow-red-500 hover:shadow-red-600  shadow-xl font-bold transition-all duration-300 dark:shadow-red-600 dark:shadow-xl duration-300 dark:bg-red-600 dark:text-white dark:hover:shadow-red-600" %>
            <% else %>
              <%= link_to "Login",new_session_path,class: "bg-blue-500 text-white px-4 py-2 rounded-full shadow-blue-500 hover:shadow-blue-600  shadow-xl font-bold transition-all duration-300 dark:shadow-blue-600 dark:shadow-lg duration-300 dark:bg-blue-500 dark:text-white dark:hover:shadow-blue-600 dark:hover:bg-blue-600 dark:hover:shadow-xl" %>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
    <!-- Mobile Menu (hidden by default) -->
    <div class="hidden md:hidden" data-hello-target="mobileMenu">
      <ul class="flex flex-col space-y-4">
        <li><a href="#" class="block text-black font-medium dark:text-white">Home</a></li>
        <li><a href="#" class="block text-black font-medium dark:text-white">Explore</a></li>
        <li><a href="#" class="block text-black font-medium dark:text-white">Notifications</a></li>
        <li><a href="#" class="block text-black font-medium dark:text-white">Profile</a></li>
      </ul>
    </div>
  </div>
</header>
