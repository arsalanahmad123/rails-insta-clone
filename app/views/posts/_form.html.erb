<div class="flex flex-col mt-10 mx-auto w-3/4">
  <h1 class="text-center text-2xl font-bold mt-10 mb-12">Create New Post</h1>
  <%= form_for @post,url: new_post_path do |f| %>
    <div class="grid grid-cols-3 items-center">
      <%= f.label :new_post,class: "font-bold col-span-1" %>
      <%= f.file_field :media,accept: "image/*, video/*",class: "col-span-2 file-input file-input-bordered file-input-justify-center file-input-inner",placeholder: "Upload a photo or video" %>
    </div>
    <div class="grid grid-cols-3 mt-5 items-center">
      <%= f.label :caption,class: "font-bold col-span-1" %>
      <%= f.text_area :caption,class: "col-span-2 file-input file-input-bordered file-input-inner p-2",placeholder: "Write a caption",required: true %>
    </div>
    <div class="flex justify-end items-center">
      <%= f.submit "Create",class: "bg-white font-semibold px-4 py-2 border border-slate-600 hover:bg-slate-600 hover:text-white rounded text-slate-600 transition-all duration-200 mt-5 cursor-pointer " %>
    </div>
  <% end %>
</div>
