<%= render "layouts/navbar" %>
<section class="bg-white dark:bg-slate-800">
  <div class="container mx-auto p-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-28">
      <!-- Instagram phone mockup image -->
      <div >
        <%= image_tag("mobile.png",class: "w-full h-full ") %>
      </div>
      <div class="mt-20">
        <h1 class="text-4xl font-semibold dark:text-white">Connect with friends and the world around you on Instagram.</h1>
        <%= link_to new_user_path do %>
          <button class="bg-blue-500 group text-white px-6 py-3 rounded-full mt-10 shadow-blue-500 hover:shadow-blue-600  shadow-xl transition-all duration-300 font-bold flex justify-center items-center">
            Sign Up 
            <span class="material-icons transition-transform duration-300 transform group-hover:translate-x-1">arrow_forward</span>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</section>
