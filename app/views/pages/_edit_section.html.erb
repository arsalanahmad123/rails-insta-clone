<%= turbo_frame_tag "edit-contentarea",data:{turbo_action: "advance",turbo_history: true,target: "_top"} do %>
  <div class="flex flex-col  mt-5" >
    <%= form_for current_user,url: update_section_path,method: :patch do |f| %>
      <div class="mx-auto w-full text-center">
        <span>Profile Photo</span>
        <%= current_user.avatar.attached? ? image_tag(current_user.avatar,class: "w-20 h-20 rounded-full mx-auto") : "No profile Photo" %>
      </div>
      <div class="grid grid-cols-3 my-2 mx-12 rounded-sm items-center gap-x-0">
        <%= f.label :profile_photo, class: "font-bold mr-2 col-span-1" %>
        <div class="col-span-2 flex flex-col">
          <%= f.file_field :avatar, class: "bg-white border border-slate-200 focus:border-slate-800 p-2 rounded-sm " %>
          <div>
            <% if !current_user.avatar.attached? %>
              <span class="text-sm text-center text-red-400">No Profile Photo.Please choose one</span>
            <% else %>
              <span class="text-sm text-center text-indigo-400">Update Profile Photo by choosing one</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-3 items-center mt-5  my-2 mx-12">
        <%= f.label :name, class: "font-bold mr-2 col-span-1" %>
        <%= f.text_field :name, class: "bg-white border border-slate-200 focus:border-slate-800 p-1 rounded-sm col-span-2", required: true,placeholder: "Name" %>
      </div>
      <div class="grid grid-cols-3 items-center mt-5 my-2 mx-12">
        <%= f.label :username, class: "font-bold mr-2 col-span-1" %>
        <%= f.text_field :username, class: "bg-white p-1 rounded-sm border border-slate-200 focus:border-slate-800 col-span-2",required: true,placeholder: "Username" %>
      </div>
      <div class="grid grid-cols-3 items-center mt-5 my-2 mx-12">
        <label for="website" class="font-bold mr-2 col-span-1">Website</label>
        <input type="text" name="website" id="website" placeholder="Website -> Only editable on App" class="bg-slate-200 p-1 rounded-sm border border-slate-200 col-span-2 hover:cursor-not-allowed" disabled>
      </div>
      <div class="grid grid-cols-3 items-center mt-5 my-2 mx-12">
        <%= f.label :bio,class: "font-bold mr-2 col-span-1" %>
        <%= f.text_area :bio, class: "bg-white p-1 rounded-sm border border-slate-200 focus:border-slate-800 col-span-2",placeholder: "Bio" %>
      </div>
      <div class="grid grid-cols-3 items-center mt-5 my-2 mx-12">
        <%= f.label :email,class: "font-bold mr-2 col-span-1" %>
        <%= f.email_field :email, class: "bg-white p-1 rounded-sm border border-slate-200 focus:border-slate-800 col-span-2",required: true,placeholder: "Email" %>
      </div>
      <div class="grid grid-cols-3 items-center mt-5 my-2 mx-12">
        <%= f.label :phone_number,class: "font-bold mr-2 col-span-1" %>
        <%= f.text_field :phone, class: "bg-white p-1 rounded-sm border border-slate-200 focus:border-slate-800 col-span-2",required: true,placeholder: "Phone Number" %>
      </div>
      <div class="grid grid-cols-3 items-center mt-5 my-2 mx-12">
        <%= f.label :gender,class: "font-bold mr-2 col-span-1" %>
        <%= f.select :gender,User::GenderOptions, class: "col-span-2 p-2 bg-white border border-slate-200 focus:border-slate-800",required: true,placeholder: "Gender" %>
      </div>
      <div class="mt-5 text-end mr-10">
        <%= f.submit "Submit", class: "bg-blue-400 hover:bg-blue-500 text-white font-bold py-1 px-3 rounded" %>
      </div>
    <% end %>
  </div>
<% end %>
